{
    "version": 2,
    "builds": [{
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        },
        {
            "src": "backend/asgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.9",
                "environment": {
                    "DJANGO_SETTINGS_MODULE": "backend.settings"
                }
            }
        }
    ],
    "routes": [{
            "src": "/static/(.*)",
            "dest": "*/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "backend/asgi.py"
        }
    ]
}